    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create DB",
            "detail": "Creates database for this laboratory work.",
            "type": "shell",
            "command": "psql",
            "args": [
                "postgres",
                "-f",
                "${workspaceFolder}/.vscode/create_db.sql"
            ],
            "group": "build",
            "isBackground": false,
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Drop DB",
            "detail": "Drop database for this laboratory work.",
            "type": "shell",
            "command": "psql",
            "args": [
                "postgres",
                "-f",
                "${workspaceFolder}/.vscode/drop_db.sql"
            ],
            "group": "none",
            "isBackground": false,
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Select all from table",
            "detail": "Selects all data from a table",
            "type": "shell",
            "command": "psql",
            "args": [
                "repair_bureau_db",
                "-c",
                "SELECT * FROM ${fileBasename};"
            ],
            "group": "none",
            "isBackground": false,
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}